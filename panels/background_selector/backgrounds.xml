          <attachment class="test_global_attachment" get_property="bgnd" mode="0" set_property="hidn" skip_if_null="false" skip_if_resetting="false"/>
        </widget>
      </container>


      <!-- overlay sections -->

      <!-- 20% -->
      <container class="plain_box" id="20bg" appearance="tcs/interface/overlay/20/paper" hidn="true">
        <layout class="stick_to_sides_attachment" alignment="all" inset="0"/>
      </container>

      <!-- 40% -->
      <container class="plain_box" id="40bg" appearance="tcs/interface/overlay/40/paper">
        <layout class="stick_to_sides_attachment" alignment="all" inset="0"/>
      </container>

      <!-- 60% -->
      <container class="plain_box" id="60bg" appearance="tcs/interface/overlay/60/paper" hidn="true">

<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE panel SYSTEM "http://www.sigames.com/dtds/sios/panel.dtd">

<panel title="backgrounds">

  <layout class="stick_to_sides_attachment" alignment="all" inset="0"/>

  <container>
    <layout class="arrange_vertical_attachment" alignment="top, extend" gap="0" offset="0"/>
    <layout class="stick_to_sides_attachment" alignment="all" inset="0"/>

    <container>
      <layout class="stick_to_sides_attachment" alignment="horizontal" inset="0"/>
      
      <container id="1pic" hidn="true">
        <layout class="stick_to_sides_attachment" alignment="all" inset="0"/>

        <widget class="background" file="backgrounds/1">
          <layout class="stick_to_sides_attachment" alignment="all" inset="0"/>
          <attachment class="test_global_attachment" get_property="bgnd" mode="1" set_property="hidn" skip_if_null="false" skip_if_resetting="false"/>
        </widget>

        <widget class="background" file="backgrounds/1" hidden="true">
          <layout class="stick_to_sides_attachment" alignment="all" inset="0"/>
          <attachment class="get_global_attachment" get_property="bgnd" set_property="file" skip_if_null="false"/>
          <attachment class="test_global_attachment" get_property="bgnd" mode="0" set_property="hidn" skip_if_null="false" skip_if_resetting="false"/>
        </widget>
      </container>

      <container id="2pic" hidn="true">
        <layout class="stick_to_sides_attachment" alignment="all" inset="0"/>

        <widget class="background" file="backgrounds/2">
          <layout class="stick_to_sides_attachment" alignment="all" inset="0"/>
          <attachment class="test_global_attachment" get_property="bgnd" mode="1" set_property="hidn" skip_if_null="false" skip_if_resetting="false"/>
        </widget>

        <widget class="background" file="backgrounds/2" hidden="true">
          <layout class="stick_to_sides_attachment" alignment="all" inset="0"/>
          <attachment class="get_global_attachment" get_property="bgnd" set_property="file" skip_if_null="false"/>
          <attachment class="test_global_attachment" get_property="bgnd" mode="0" set_property="hidn" skip_if_null="false" skip_if_resetting="false"/>
        </widget>
      </container>

      <container id="3pic" hidn="true">
        <layout class="stick_to_sides_attachment" alignment="all" inset="0"/>

        <widget class="background" file="backgrounds/3">
          <layout class="stick_to_sides_attachment" alignment="all" inset="0"/>
          <attachment class="test_global_attachment" get_property="bgnd" mode="1" set_property="hidn" skip_if_null="false" skip_if_resetting="false"/>
        </widget>

        <widget class="background" file="backgrounds/3" hidden="true">
          <layout class="stick_to_sides_attachment" alignment="all" inset="0"/>
          <attachment class="get_global_attachment" get_property="bgnd" set_property="file" skip_if_null="false"/>
          <attachment class="test_global_attachment" get_property="bgnd" mode="0" set_property="hidn" skip_if_null="false" skip_if_resetting="false"/>
        </widget>
      </container>

      <container id="4pic" hidn="true">
        <layout class="stick_to_sides_attachment" alignment="all" inset="0"/>

        <widget class="background" file="backgrounds/4">
          <layout class="stick_to_sides_attachment" alignment="all" inset="0"/>
          <attachment class="test_global_attachment" get_property="bgnd" mode="1" set_property="hidn" skip_if_null="false" skip_if_resetting="false"/>
        </widget>

        <widget class="background" file="backgrounds/4" hidden="true">
          <layout class="stick_to_sides_attachment" alignment="all" inset="0"/>
          <attachment class="get_global_attachment" get_property="bgnd" set_property="file" skip_if_null="false"/>
          <attachment class="test_global_attachment" get_property="bgnd" mode="0" set_property="hidn" skip_if_null="false" skip_if_resetting="false"/>
        </widget>
      </container>

      <container id="5pic" hidn="true">
        <layout class="stick_to_sides_attachment" alignment="all" inset="0"/>

        <widget class="background" file="backgrounds/5">

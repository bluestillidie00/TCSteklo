<panel>
	<attachment_group class="vertical_arrange" vertical_alignment="bottom,extend" vertical_gap="8" />

	<widget class="stadium_picture" id="STAp" image_alignment="centre" scale_picture="true" keep_aspect_ratio="true" priority="1" width="400">
		<record id="object_property">
			<integer id="get_property" value="objt" />
			<integer id="set_property" value="objt" />
		</record>
	</widget>	 

	<container >
		<attachment_group class="vertical_arrange_autosize" vertical_offset="0" horizontal_inset="0" vertical_gap="0" />

		<record id="default_properties" auto_size="vertical" alignment="centre_x"/>

		<widget class="stadium_button" icon_enabled="false" size="12"  font="title"  colour="fg">
			<record id="object_property">
				<integer id="get_property" value="stad" />
			</record>
		</widget>

		<widget class="city_label" font="label"  colour="faded text">
			<record id="object_property">
				<integer id="get_property" value="SctI" />
			</record>
		</widget>			
	</container>

	<container height="42" >
		<attachment_group class="horizontal_arrange" horizontal_alignment="fill" />

		<container>
			<attachment_group class="vertical_arrange_autosize" vertical_offset="0" horizontal_inset="0" vertical_gap="0" />

			<record id="default_properties" auto_size="vertical" alignment="centre_x"/>

			<widget class="dashed_number_label" size="12" colour="fg" style="bold">
				<record id="object_property">
					<integer id="get_property" value="Scpy" />
				</record>
			</widget>

			<widget class="label" font="label"  colour="faded text">
				<translation id="text" translation_id="252902" type="use" value="Capacity" />
			</widget>			
		</container>

		<container>
			<attachment_group class="vertical_arrange_autosize" vertical_offset="0" horizontal_inset="0" vertical_gap="0" />

			<record id="default_properties" auto_size="vertical" alignment="centre_x"/>

			<widget class="dashed_number_label" size="12" colour="fg" style="bold">
				<record id="object_property">
					<integer id="get_property" value="Sbdy" />
				</record>
			</widget>

			<widget class="label" font="label"  colour="faded text">
				<translation id="text" translation_id="284334" type="use" value="Year Built[COMMENT: heading; team_information_panel; year the stadium was build on]" />
			</widget>			
		</container>

		<container>
			<attachment_group class="vertical_arrange_autosize" vertical_offset="0" horizontal_inset="0" vertical_gap="0" />

			<record id="default_properties" auto_size="vertical" alignment="centre_x"/>

			<widget class="pitch_condition_label" size="12" colour="fg" style="bold">
				<record id="object_property">
					<integer id="get_property" value="Sptc" />
				</record>
			</widget>

			<widget class="label" font="label"  colour="faded text">
				<translation id="text" translation_id="282080" type="use" value="Pitch Condition[COMMENT: heading; team_information_panel; max pitch dimensions]" />
			</widget>			
		</container>

	</container>
</panel>